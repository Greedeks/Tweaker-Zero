<Page x:Class="Tweaker.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tweaker.Pages" xmlns:ToggleSwitch="clr-namespace:ToggleSwitch"
      mc:Ignorable="d" 
      d:DesignHeight="509" d:DesignWidth="400"
      Title="SettingsPage" SnapsToDevicePixels="True" UseLayoutRounding="True" Style="{StaticResource PageStyle}">
    <Grid>
        <Grid>
            <ScrollViewer FocusVisualStyle="{x:Null}" IsTabStop="False">
                <Grid>
                    <TextBlock x:Name="UserName" Width="Auto" Text="Настройки" FontFamily="/Fonts/#Nunito" FontSize="18px" Foreground="{DynamicResource ColorRed}" Height="28" HorizontalAlignment="Center" VerticalAlignment="Top"  KeyboardNavigation.IsTabStop="False" Margin="0,10,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.7" Color="#FF2400" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="50,60,0,0" Height="25" VerticalAlignment="Top">
                        <TextBlock x:Name="SelectLangText" Style="{DynamicResource SystemINFO}" Foreground="{DynamicResource ColorGray}" Height="20" FontSize="14px" Text="Язык интерфейса:"/>
                        <Label Width="5"/>
                        <ComboBox x:Name="SelectLang"  Width="200">
                            <ComboBoxItem x:Name="rus" IsSelected="True" Content="Русский"/>
                            <ComboBoxItem x:Name="eng" Content="Английский"/>
                        </ComboBox>
                    </StackPanel>
                    <Border Margin="35,105,0,0" Width="325" Background="{DynamicResource ColorRedNotActive}" Height="1" VerticalAlignment="Top"/>

                    <Label x:Name="ToastShow" Content="Показывать уведомления" Style="{StaticResource Tweaks_OFF}" Margin="94,124,0,357"/>
                    <ToggleSwitch:ToggleButton x:Name="TNotifShow" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="39" Margin="50,127,0,0"/>
                    
                    
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
