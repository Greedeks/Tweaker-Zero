<Page x:Class="Tweaker.Pages.SystemInfromation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tweaker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="509" d:DesignWidth="1044"
      Title="SystemInfromation" SnapsToDevicePixels="True" UseLayoutRounding="True">
    <Page.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.1" From="0.5" To="1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="UIElement.Visibility" Value="Visible">
                    <Setter Property="UIElement.Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Style>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="131*"/>
            <RowDefinition Height="378*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" SnapsToDevicePixels="True" UseLayoutRounding="True">
            <!--#region  ImageUser-->
            <Ellipse Width="105.5" Height="105.5" Fill="{DynamicResource ColorRedNotActive}" Opacity="0.8"/>
            <Border CornerRadius="50.5,50.5,50.5,50.5" Height="100.5" Width="100.5" Margin="471.5,15.5,472.5,14">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.7" Color="#FF2400" />
                </Border.Effect>
                <Border.Background>
                    <ImageBrush x:Name="UserAvatar" Stretch="Fill"/>
                </Border.Background>
            </Border>
            <!--#endregion-->
            
        </Grid>

    </Grid>
</Page>
