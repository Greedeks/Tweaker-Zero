<Page x:Class="Tweaker.Pages.SystemInfromation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tweaker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="509" d:DesignWidth="1044"
      Title="SystemInfromation" SnapsToDevicePixels="True" UseLayoutRounding="True">
    <Page.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.1" From="0.5" To="1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <Trigger Property="UIElement.Visibility" Value="Visible">
                    <Setter Property="UIElement.Opacity" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Style>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140*"/>
            <RowDefinition Height="369*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" SnapsToDevicePixels="True" UseLayoutRounding="True">

            <!--#region  ImageUser-->
            <Border BorderBrush="{DynamicResource ColorRedNotActive}" BorderThickness="3" CornerRadius="50.5" Height="100.5" Width="100.5" Margin="472,6,472,34" HorizontalAlignment="Center">
                <Border CornerRadius="50.5" Margin="0,0,1,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#FF2400" />
                    </Border.Effect>
                    <Border.Background>
                        <ImageBrush x:Name="UserAvatar"/>
                    </Border.Background>
                </Border>
            </Border>
            <!--#endregion-->

            <Label x:Name="UserName" Width="Auto" Content="Name" FontFamily="/Fonts/#NotoSans" FontSize="18px" Foreground="{DynamicResource ColorRed}" Height="28" HorizontalContentAlignment="Center" Margin="0,112,0,0">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.9" Color="#FF2400" />
                </Label.Effect>
            </Label>

        </Grid>

    </Grid>
</Page>
