<UserControl x:Class="ToggleSwitch.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToggleSwitch"
             mc:Ignorable="d" Height="176.667" Width="288.667" SnapsToDevicePixels="True" UseLayoutRounding="True">

    <Viewbox Margin="0,2,2,1" KeyboardNavigation.IsTabStop="False">
        <Grid HorizontalAlignment="Left" Height="60" Margin="0" VerticalAlignment="Top" Width="100">
            <Rectangle x:Name="Back" Fill="#737373" Cursor="Hand" HorizontalAlignment="Left" Height="56.5" VerticalAlignment="Top" Width="96.5" Margin="2,2,0,0" RadiusY="29" RadiusX="29" MouseLeftButtonDown="Toggle_MouseLeftButtonDown" KeyboardNavigation.IsTabStop="False"/>
            <Ellipse x:Name="Dot" Fill="{DynamicResource ColorWhite}" Cursor="Hand" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="50" MouseLeftButtonDown="Toggle_MouseLeftButtonDown" Loaded="Dot_Loaded" StrokeThickness="1"  KeyboardNavigation.IsTabStop="False">
                <Ellipse.Stroke>
                    <SolidColorBrush  Color="Black" Opacity="0.3"/>
                </Ellipse.Stroke>
            </Ellipse>
        </Grid>
    </Viewbox>




</UserControl>
